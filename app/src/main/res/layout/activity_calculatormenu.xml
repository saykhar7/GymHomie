<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bg"
    tools:context=".CalculatorMenu_Activity">

    <FrameLayout
        android:id="@+id/open_membershipID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/rounded_bg">

        <!-- Use a vertical LinearLayout to arrange titles and images -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- Title for Weight Calculator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Calculator:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <!-- Icon for Weight Calculator -->
            <ImageView
                android:id="@+id/WeightCalculatorButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/weights"
                android:clickable="true"
                android:onClick="onWeightCalculatorClick"
                android:layout_gravity="center"/>

            <!-- Title for Barbell Calculator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbell Calculator:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <!-- Icon for Barbell Calculator -->
            <ImageView
                android:id="@+id/barbellCalculatorButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fitness"
                android:clickable="true"
                android:onClick="onBarbellCalculatorClick"
                android:layout_gravity="center"/>

            <!-- Title for Calories Burned Calculator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories Burned Calculator:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <!-- Icon for Calories Burned Calculator -->
            <ImageView
                android:id="@+id/caloriesBurnedCalculatorButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/weighscale"
                android:clickable="true"
                android:onClick="onCaloriesBurnedCalculatorClick"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
