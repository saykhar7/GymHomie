<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bg"
    tools:context=".GoalMenu_Activity">

    <FrameLayout
        android:id="@+id/open_membershipID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/rounded_bg">

        <!-- Use a vertical LinearLayout to arrange titles and buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- Button for Add Goals -->
            <Button
                android:id="@+id/addGoalsButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_border"
                android:text="Add Goals"
                android:textSize="16sp"
                android:clickable="true"
                android:onClick="onAddGoalsClick"
                android:layout_gravity="center"/>

            <!-- Button for View Goals -->
            <Button
                android:id="@+id/viewGoalsButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_border"
                android:text="View Goals"
                android:textSize="16sp"
                android:clickable="true"
                android:onClick="onViewGoalsClick"
                android:layout_gravity="center"/>

            <!-- Button for Update Goals -->
            <Button
                android:id="@+id/updateGoalsButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_border"
                android:text="Update Goals"
                android:textSize="16sp"
                android:clickable="true"
                android:onClick="onUpdateGoalsClick"
                android:layout_gravity="center"/>

            <!-- Button for Delete Goals -->
            <Button
                android:id="@+id/deleteGoalsButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_border"
                android:text="Delete Goals"
                android:textSize="16sp"
                android:clickable="true"
                android:onClick="onDeleteGoalsClick"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
