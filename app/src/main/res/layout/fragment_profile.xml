<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".fragments.profile_fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/default_profile"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileBadge"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle"
                android:src="@drawable/trophy_unlocked" />
            <TextView
                android:id="@+id/profileBadgeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievement"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProfileName"
            android:textSize="44dp"
            android:fontFamily="@font/neon"
            android:layout_gravity="left"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProfileEmail"
            android:textSize="24dp"
            android:fontFamily="@font/neon"
            android:layout_gravity="left"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/achievementsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hapticFeedbackEnabled="true"
            android:background="@drawable/button_border"
            android:text="Achievements"
            android:textAlignment="textStart"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/neon"
            android:textSize="32dp"/>

        <Button
            android:id="@+id/goalsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hapticFeedbackEnabled="true"
            android:textAlignment="textStart"
            android:text="Goals"
            android:textSize="32dp"
            android:fontFamily="@font/neon"
            android:background="@drawable/button_border"/>

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:hapticFeedbackEnabled="true"
            android:text="Logout"
            android:fontFamily="@font/neon"
            android:textAlignment="textStart"
            android:textSize="32dp" />

    </LinearLayout>


</LinearLayout>