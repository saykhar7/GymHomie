<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <TextView

        android:id="@+id/eventNameID"
        android:textSize="18dp"
        android:text="This is where the name appears"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/eventDateID"
        android:layout_below="@+id/eventNameID"
        android:text="20 December 2023"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/eventCityID"
        android:text="Cerritos"
        android:textSize="14dp"
        android:layout_below="@+id/eventDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/eventStateID"
        android:text="CA"
        android:textSize="14dp"
        android:layout_marginLeft="10sp"
        android:layout_toEndOf="@+id/eventCityID"
        android:layout_below="@+id/eventDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/eventZipcodeID"
        android:text="90701"
        android:textSize="14dp"
        android:layout_marginLeft="7sp"
        android:layout_toEndOf="@+id/eventStateID"
        android:layout_below="@+id/eventDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/eventlinkID"
        android:text="This is the linkkkkkkkkkkk"
        android:textSize="12dp"
        android:layout_marginTop="6sp"
        android:layout_below="@+id/eventZipcodeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>