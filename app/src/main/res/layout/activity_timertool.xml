<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stopwatch_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/stopwatch_stop"
            android:layout_width="98dp"
            android:layout_height="62dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="28dp"
            android:text="Stop"
            android:textColor="#388e3c"
            app:layout_constraintEnd_toStartOf="@+id/stopwatch_reset"
            app:layout_constraintTop_toBottomOf="@+id/stopwatch_displayedText" />

        <Button
            android:id="@+id/stopwatch_reset"
            android:layout_width="98dp"
            android:layout_height="62dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="16dp"
            android:text="Reset"
            android:textColor="#388e3c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stopwatch_displayedText" />

        <Button
            android:id="@+id/stopwatch_start"
            android:layout_width="98dp"
            android:layout_height="62dp"
            android:layout_marginTop="120dp"
            android:text="Start"
            android:textColor="#388e3c"
            app:layout_constraintEnd_toStartOf="@+id/stopwatch_stop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stopwatch_displayedText" />

        <TextView
            android:id="@+id/stopwatch_displayedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="172dp"
            android:text="00:00:00"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>